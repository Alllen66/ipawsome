---
import toolsData from '../data/tools.json';
---

<section class="py-16 px-4 bg-gray-50">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Featured Tools
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Essential calculators and tools to help you take better care of your beloved pets
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {toolsData.map((tool) => (
        <a 
          href={`/tools/${tool.slug}/`}
          class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg hover:-translate-y-1 transition-all duration-200 group"
        >
          <div class="text-4xl mb-4">{tool.icon}</div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
            {tool.title}
          </h3>
          <p class="text-gray-600 text-sm leading-relaxed">
            {tool.desc}
          </p>
          <div class="mt-4 text-blue-600 font-medium text-sm group-hover:text-blue-700">
            Try it now â†’
          </div>
        </a>
      ))}
    </div>
  </div>
</section>