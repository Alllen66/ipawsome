---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
import Hero from '../components/Hero.astro';
import FeaturedTools from '../components/FeaturedTools.astro';
import GuideCards from '../components/GuideCards.astro';
import BlogCards from '../components/BlogCards.astro';

const pageTitle = 'iPawsome - Dog Age & BMI Calculator | Free Pet Health Tools';
const pageDescription = 'Professional dog age calculator and BMI calculator for pet health assessment. Convert dog years to human years and check your dog\'s weight health with our veterinary-approved tools supporting 20+ breeds.';
---

<Layout title={pageTitle} description={pageDescription}>
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "iPawsome",
      "url": "https://ipawsome.com",
      "logo": "https://ipawsome.com/logo.png",
      "description": "Professional dog age calculator and BMI calculator for pet health assessment",
      "sameAs": [
        "https://www.facebook.com/ipawsome/",
        "https://www.instagram.com/ipawsome/"
      ],
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD",
        "description": "Free dog age and BMI calculators"
      }
    }
    </script>
    
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebApplication",
      "name": "iPawsome - Dog Age & BMI Calculator",
      "url": "https://ipawsome.com",
      "description": "Professional dog age calculator and BMI calculator for pet health assessment. Convert dog years to human years and check your dog's weight health with veterinary-approved tools.",
      "applicationCategory": "HealthApplication",
      "operatingSystem": "Web Browser",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "featureList": [
        "Dog Age Calculator - Convert dog years to human years",
        "Dog BMI Calculator - Professional weight health assessment",
        "Support for 20+ dog breeds",
        "Veterinary-approved formulas",
        "Imperial and Metric units support"
      ]
    }
    </script>

    <!-- Main Content -->
    <main>
        <Hero />
        <FeaturedTools />
        <GuideCards />
        <BlogCards />
    </main>
</Layout>